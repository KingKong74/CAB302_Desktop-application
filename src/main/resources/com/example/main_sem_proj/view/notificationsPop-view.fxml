<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.main_sem_proj.controller.NotificationsPopController"
      stylesheets="@../css/styles.css">

    <!-- Custom top bar -->

    <VBox alignment ="CENTER" spacing = "0">
        <HBox alignment="CENTER" spacing="30">
            <VBox spacing="0" alignment="TOP_LEFT">
                <Label text="Notification Title:"/>
                <TextField fx:id="NotifTitleField" promptText="Enter title..." prefWidth="150" maxWidth="150"/>
            </VBox>
        </HBox>
        <HBox alignment = "CENTER" spacing = "30">
            <VBox spacing = "0" alignment="TOP_LEFT">
                <Label text = "Notification Text:"/>
                <TextField fx:id="NotifTextField" promptText="Enter message text..." prefWidth = "150" maxWidth="150" prefHeight="75"/>
            </VBox>
        </HBox>
        <VBox spacing ="20" alignment="TOP_LEFT">
            <padding>
                <Insets bottom="0" left="25" right="0" top="0"/>
            </padding>
            <HBox alignment = "CENTER" spacing = "50">
                <VBox spacing = '0' alignment="TOP_LEFT">
                    <Label text = "Sound Effects:"/>
                    <HBox fx:id="topHbox" alignment="TOP_LEFT">
                        <ChoiceBox fx:id="dropdownMenu" prefWidth="135" HBox.hgrow="NEVER" value="Fart Sound">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Twinkle   " />
                                    <String fx:value="Alarm  " />
                                    <String fx:value="Doorbell  " />
                                    <String fx:value="Waves   " />
                                    <String fx:value="Radiate   " />
                                </FXCollections>
                            </items>
                        </ChoiceBox>

                    </HBox>
                    <VBox spacing="10">
                        <CheckBox fx:id="SoundEffects" text="Enable Sound Effects" alignment="CENTER" />
                        <CheckBox fx:id="CustomNotification" text="Enable Custom Notifications" alignment="CENTER" />
                        <CheckBox fx:id="SoftALerts" text="Enable Soft Alerts" alignment="CENTER" />
                    </VBox>
                </VBox>
            </HBox>
            <HBox alignment = "CENTER" spacing = "50">
                <VBox alignment = "CENTER" spacing = "0">
                    <Button fx:id="SaveandExit" text = "Save" onAction="#handleNotificationSave" prefWidth="60" alignment="CENTER" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>

</VBox>
