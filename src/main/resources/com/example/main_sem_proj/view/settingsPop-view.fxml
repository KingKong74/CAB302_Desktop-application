<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.main_sem_proj.controller.SettingsPopController"
      stylesheets="@../css/styles.css">

    <HBox>
        <HBox prefWidth="25"/>
        <VBox alignment="CENTER" spacing="10">
            <Slider fx:id="slider" prefHeight="260" orientation="VERTICAL" />
        </VBox>

        <HBox prefWidth="25"/>

        <VBox>
            <VBox prefHeight="5"/>
            <Label style="-fx-font-size: 14px;">Set Schedule:</Label>
            <VBox prefHeight="4"/>
            <HBox spacing="45">
                <Label>Start Time:</Label>
                <Label>End Time:</Label>
            </HBox>
            <HBox spacing="30">
                <ComboBox prefWidth="70" promptText="18:00" editable="true"/>
                <ComboBox prefWidth="70" promptText="22:00" editable="true"/>
            </HBox>
            <VBox prefHeight="6"/>
            <HBox spacing="15">
                <Label style="-fx-font-size: 10px;" >Enable Alerts Schedule: </Label>
                <CheckBox />
            </HBox>
            <VBox prefHeight="9"/>
            <Label style="-fx-font-size: 14px;">Set Bedtime / Wakeup: </Label>
            <VBox prefHeight="4"/>
            <HBox spacing="55">
                <Label>Bedtime:</Label>
                <Label>Wakeup:</Label>
            </HBox>
            <HBox spacing="30">
                <ComboBox prefWidth="70" promptText="21:30" editable="true" />
                <ComboBox prefWidth="70" promptText="07:00" editable="true"/>
            </HBox>
            <VBox prefHeight="6"/>
            <HBox spacing="17">
                <Label style="-fx-font-size: 10px;" >Enable Sleep Schedule: </Label>
                <CheckBox />
            </HBox>
            <VBox prefHeight="9"/>
            <Label style="-fx-font-size: 14px;" >Set Location:</Label>
            <VBox prefHeight="4"/>
            <VBox spacing="8">
                <TextField prefWidth="80" promptText="Enter Country..." />
                <TextField prefWidth="80" promptText="Enter City..." />
            </VBox>
            <VBox prefHeight="6"/>
            <HBox spacing="47">
                <Label style="-fx-font-size: 10px;" >Enable Location: </Label>
                <CheckBox />
            </HBox>
            <VBox prefHeight="6"/>

            <HBox alignment="CENTER">
                <Button prefWidth="85" text="Save"/>
            </HBox>


        </VBox>
    </HBox>
</VBox>