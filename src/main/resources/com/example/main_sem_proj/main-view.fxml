<?xml version="1.0" encoding="UTF-8"?>

<!-- This is for MAIN UI -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.main_sem_proj.controller.MainController"
      stylesheets="@styles.css"
      alignment="CENTER">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox fx:id="colourSliderBox" alignment="CENTER"  >
        <Slider fx:id="colourSlider" prefWidth="450" min="1900" max="6500" value="50" styleClass="slider-thumb" />
    </HBox>

    <VBox prefHeight="60.0"/>

    <HBox fx:id="mainHbox" alignment="CENTER" spacing="70.0">
        <Label fx:id="mainIcons" styleClass="main-buttons"/>
        <Button id="darkModeButton" text="DarkMode" styleClass="main-buttons" onAction="#onDarkModeButtonClick" prefWidth="80" prefHeight="80"/>
        <Button id="focusModeButton" text="FocusMode" styleClass="main-buttons" onAction="#onFocusModeButtonClick" prefWidth="80" prefHeight="80"/>
        <Button id="notificationsButton" text="Notifications" styleClass="main-buttons" onAction="#onNotificationsButtonClick" prefWidth="80" prefHeight="80"/>
        <Button id="settingsButton" text="Settings" styleClass="main-buttons" onAction="#onSettingsButtonClick" prefWidth="80" prefHeight="80"/>
    </HBox>

</VBox>
