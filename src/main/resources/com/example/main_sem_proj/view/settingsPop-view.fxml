<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.main_sem_proj.controller.SettingsPopController"
      stylesheets="@../css/styles.css">
    <!-- Custom top bar -->
    <HBox styleClass="title-bar" prefHeight="50">
    </HBox>

    <!-- Main content area -->
    <VBox>
        <Slider prefHeight="400" orientation="VERTICAL" />
    </VBox>
    <VBox>
        <!-- Content of the popup window -->
        <Label>Start Time:</Label>
        <Label>End Time:</Label>
        <HBox>

            <TextField prefWidth="100"  promptText="Enter something..." />
            <TextField prefWidth="100"  promptText="Enter something..."/>
        </HBox>
        <Label>Bedtime:</Label>
        <Label>Wake-up:</Label>
        <HBox>

            <TextField prefWidth="100"  promptText="Enter something..." />
            <TextField prefWidth="100"  promptText="Enter something..."/>
            <ToggleButton></ToggleButton>
        </HBox>
        <Label>Set Location:</Label>
        <TextField prefWidth="100" promptText="Enter Country..."/>
        <TextField prefWidth="100" promptText="Enter City..."/>
        <ToggleButton></ToggleButton>

        <HBox>
            <Button text="Save" prefWidth="200" prefHeight="100"> </Button>
        </HBox>
    </VBox>


</VBox>
