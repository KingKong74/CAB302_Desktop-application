<?xml version="1.0" encoding="UTF-8"?>

<!-- This is for MAIN UI -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ChoiceBox?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.main_sem_proj.controller.MainController"
      stylesheets="@css/styles.css"
      alignment="CENTER">

    <padding>
        <Insets bottom="20.0" left="5.0" right="5.0" top="20.0"/>
    </padding>

    <HBox spacing="290">
        <HBox fx:id="timerBox" alignment="TOP_LEFT">
            <padding>
                <Insets left="24.0"/>
            </padding>
            <Button text="00:00:00" prefWidth="80" /> <!--onAction="#startTimer"-->
        </HBox>

        <HBox fx:id="topHbox" alignment="TOP_RIGHT">
            <ChoiceBox fx:id="dropdownMenu" prefWidth="150" HBox.hgrow="NEVER" value="   - Custom Presets -">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Option 1   " />
                        <String fx:value="Option 2   " />
                        <String fx:value="Option 3   " />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </HBox>
    </HBox>

    <VBox prefHeight="60.0" />

    <HBox fx:id="colourSliderBox" alignment="CENTER"  >
        <Slider fx:id="colourSlider" prefWidth="450" min="1900" max="6500" value="50" styleClass="slider-thumb" />
    </HBox>

    <VBox prefHeight="80.0"/>

    <HBox fx:id="mainHbox" alignment="CENTER" spacing="50.0">
        <Label fx:id="mainIcons" styleClass="main-buttons"/>
        <Button id="darkModeButton" text="DarkMode" styleClass="main-buttons" onAction="#onDarkModeButtonClick" prefWidth="100" prefHeight="100"/>
        <Button id="focusModeButton" text="FocusMode" styleClass="main-buttons" onAction="#onFocusModeButtonClick" prefWidth="100" prefHeight="100"/>
        <Button id="notificationsButton" text="Notifications" styleClass="main-buttons" onAction="#onNotificationsButtonClick" prefWidth="100" prefHeight="100"/>
        <Button id="settingsButton" text="Settings" styleClass="main-buttons" onAction="#onSettingsButtonClick" prefWidth="100" prefHeight="100"/>
    </HBox>

    <VBox prefHeight="70.0" />

</VBox>
