<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.main_sem_proj.controller.SettingsPopController"
      stylesheets="@../css/styles.css">

    <!-- Custom top bar -->
    <HBox styleClass="title-bar" prefHeight="50">
        <!-- You can add any content here for the title bar -->
    </HBox>

    <!-- Main content area -->
    <HBox>
        <!-- Left side content -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <!-- Adjusted slider to take up the whole left side -->
            <Slider prefHeight="400" orientation="VERTICAL" />
        </VBox>

        <VBox prefWidth="50"/>

        <!-- Right side content -->
        <VBox spacing="10">
            <!-- Your existing content goes here -->
            <Label>Start Time:</Label>
            <Label>End Time:</Label>
            <HBox spacing="10">
                <ComboBox prefWidth="80" promptText="Enter something..." />
                <ComboBox prefWidth="80" promptText="Enter something..." />
            </HBox>
            <Label>Bedtime:</Label>
            <Label>Wake-up:</Label>
            <HBox spacing="10">
                <ComboBox prefWidth="80" promptText="Enter something..." />
                <ComboBox prefWidth="80" promptText="Enter something..." />
                <ToggleButton text="Toggle Me" selected="true" />
            </HBox>
            <Label>Set Location:</Label>
            <TextField prefWidth="80" promptText="Enter Country..." />
            <TextField prefWidth="80" promptText="Enter City..." />
            <ToggleButton text="Toggle Me" selected="true" />
        </VBox>
    </HBox>
</VBox>